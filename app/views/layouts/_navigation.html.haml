.navbar.navbar-fixed-top
  .navbar-inner
    .container
      - if current_user
        - user = "<span class='brand-user'>#{current_user.email}(#{current_user.roles.collect{|r| r.name}.join(', ').truncate(40)})</span>".html_safe
      - else
        - user = ''
      = link_to "Personal Library <br/>#{user}".html_safe, '#', :class => 'brand'
      = link_to_if current_user, 'Logout', destroy_user_session_path, :class => 'brand logout', :style => 'float: right;'

    - if current_user
      %ul.nav.nav-tabs
        %li.active
          = link_to 'Inbox', inbox_files_path
        %li
          = link_to 'Filters', filters_path
        %li
          = link_to 'Labels', labels_path