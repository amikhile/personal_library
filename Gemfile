gem 'clockwork'
gem 'delayed_job'


group :development, :test do
  gem "ruby-debug-base19x", '>= 0.11.30.pre10'
  gem "ruby-debug-ide", '>= 0.4.17.beta14'
  gem 'linecache19', :git => 'git://github.com/mark-moseley/linecache'
